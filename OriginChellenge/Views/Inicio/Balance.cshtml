
@{
    ViewBag.Title = "Balance";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/css/EstiloBalance.css" rel="stylesheet" />
</head>

<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">BALANCE</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form">
                            <h3 class="text-center text-info">BALANCE CUENTA</h3>
                            <div class="form-group">
                                <label for="tarjeta" class="text-info">NUMERO DE TARJETA:</label><br>
                                <h2>@ViewBag.numeroTarjeta</h2>
                            </div>
                            <div class="form-group">
                                <label for="tarjeta" class="text-info">FECHA VENCIMIENTO:</label><br>
                                <h2>@ViewBag.fechaVencimiento</h2>
                            </div>
                            <div class="form-group">
                                <label for="tarjeta" class="text-info">CANTIDAD TOTAL:</label><br>
                                <h2>@ViewBag.cantidad</h2>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Aceptar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

