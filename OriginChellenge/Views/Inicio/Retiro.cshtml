
@{
    ViewBag.Title = "Retiro";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/css/EstilosTarjeta.css" rel="stylesheet" />
</head>

<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">RETIRO</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="@Url.Action("Retiro","Inicio")" method="post">
                            <h3 class="text-center text-info">RETIRO DE EFECTIVO</h3>
                            <div class="form-group">
                                <label class="text-info">CANTIDAD:</label><br>
                                <input type="number" name="Monto" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Aceptar">
                                <input type="reset" class="btn btn-info btn-md" value="Limpiar">
                            </div>
                        </form>
                        <form action="@Url.Action("CerrarSesion","Acceso")" method="post">
                            <input type="submit" class="btn btn-info btn-md" value="Salir">
                        </form>
                        <form action="@Url.Action("Inicio","Inicio")" method="post">
                            <input type="submit" class="btn btn-info btn-md" value="Inicio">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

